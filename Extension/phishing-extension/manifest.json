{
  "manifest_version": 3,
  "name": "ScamiFy",
  "version": "1.1",
  "description": "AI-powered phishing detection with real-time scanning and download protection",
  "permissions": [
    "activeTab",
    "tabs", 
    "storage",
    "downloads",
    "scripting",
    "contextMenus",
    "webNavigation",
    "notifications",
    "unlimitedStorage",
    "background"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "https://127.0.0.1:5000/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["globe-stats/*", "phish-stats-globe-main/**/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-enhanced.js"],
      "run_at": "document_end",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ScamiFy"
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png", 
    "128": "icons/logo.png"
  }
} 